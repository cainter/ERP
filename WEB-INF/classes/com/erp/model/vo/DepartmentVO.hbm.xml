<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.erp.model.vo.DepartmentVO" table="department">
		<id name="id" type="long" column="id">
			<generator class="assigned" />
		</id>
		<property name="departmentName" type="string">
			<column name="department_name" length="30" not-null="true" />
		</property>
		<property name="departmentCode" type="string">
			<column name="department_code" length="30" not-null="true" />
		</property>
		<property name="parentId" type="long">
			<column name="parent_id" not-null="true" />
		</property>
		<property name="parentIdStr" type="string">
			<column name="parent_id_str" length="200" />
		</property>
		<property name="enabled" type="string">
			<column name="enabled" length="1" />
		</property>
    </class>
</hibernate-mapping>